	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.*;
			import mx.containers.TitleWindow;
			import mx.events.CloseEvent;
			import mx.events.ResizeEvent;
			import mx.managers.PopUpManager;
			
			private var _offset:Number = 5;
			
			public function addToStage(evt:Event):void
			{
				stage.addEventListener(Event.RESIZE,onResizeHandler);
				onResizeHandler();
			}
			
			protected function onResizeHandler(event:Event=null):void
			{
				if(!stage)return;
				group.height = stage.stageHeight - group.y + _offset;
			}
			
			[Bindable]
			public var selectedNode:XML;
			
			// Event handler for the Tree control change event.
			public function treeChanged(evt:Event):void {
				selectedNode = Tree(evt.target).selectedItem as XML;
				trace(selectedNode.toString());
//				var box:VDividedBox = new VDividedBox();
//				box.autoLayout = true;
//				box.addElement(new Panel());
//				dbox.addElementAt(box,0);
//				PopUpManager.createPopUp(this,TitleWindow,true);
				var title:TitleWindow = new TitleWindow();
				title.showCloseButton = true;
				title.width = 500;
				title.height = 500;
				title.x = 100;
				PopUpManager.addPopUp(title,this,false);
				title.addEventListener(Event.CLOSE,onCloseHandler);
			}
			
			protected function onCloseHandler(event:CloseEvent):void
			{
				PopUpManager.removePopUp(event.currentTarget as TitleWindow);				
			}
			
		]]>
	</fx:Script>
