<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   xmlns:ns1="*"
					   width="900"
					   height="750"
					   minWidth="500"
					   minHeight="400"
					   addedToStage="addToStage(event)"
					   >
	<fx:Style source="ZeZeUIEditor.css"/>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.*;
			import mx.events.ResizeEvent;
			
			private var _offset:Number = 5;
			
			public function addToStage(evt:Event):void
			{
				stage.addEventListener(Event.RESIZE,onResizeHandler);
				onResizeHandler();
			}
			
			protected function onResizeHandler(event:Event=null):void
			{
				if(!stage)return;
				toolBar.width = uiMenuBar.width = stage.stageWidth;
				group.height = stage.stageHeight - group.y + _offset;
			}
			
		]]>
	</fx:Script>
	<ns1:ToolBar id="toolBar" x="0" y="22" />
	<ns1:UIMenuBar id="uiMenuBar" x="0" y="0" width="695"/>
	<!-- Panel添加伸缩 -->
	<s:Group id="group" left="0" top="58" width="100%" height="634" y="65">
			<mx:DividedBox direction="horizontal" width="100%" height="100%">
				<mx:VDividedBox direction="vertical" width="25%" height="100%">
					<s:Panel title="Panel 1" width="100%" height="100%">
					</s:Panel>
					<s:Panel title="Panel 2" width="100%" height="100%">
					</s:Panel>
				</mx:VDividedBox>
				<s:Panel title="Panel 3" width="50%" height="100%">
				</s:Panel>
				<mx:VDividedBox direction="vertical" width="25%" height="100%">
					<s:Panel title="Panel 4" width="100%" height="100%">
					</s:Panel>
					<s:Panel title="Panel 5" width="100%" height="100%">
					</s:Panel>
				</mx:VDividedBox>
			</mx:DividedBox>
	</s:Group>
</s:WindowedApplication>
